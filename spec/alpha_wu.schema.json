{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://montreal.ai/schemas/alpha_wu.json",
  "title": "Alpha Work Unit",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "job_id",
    "wu_id",
    "role",
    "alpha_wu_weight",
    "model_runtime",
    "inputs_hash",
    "outputs_hash",
    "wall_clock_ms",
    "cpu_sec",
    "node_ens_name",
    "attestor_address",
    "attestor_sig",
    "created_at"
  ],
  "properties": {
    "job_id": {
      "type": "string",
      "minLength": 1
    },
    "wu_id": {
      "type": "string",
      "minLength": 1
    },
    "role": {
      "type": "string",
      "enum": ["executor", "validator", "orchestrator"]
    },
    "alpha_wu_weight": {
      "type": "number",
      "minimum": 0
    },
    "model_runtime": {
      "type": "object",
      "required": ["name", "version", "runtime_type"],
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        },
        "runtime_type": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "inputs_hash": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$"
    },
    "outputs_hash": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$"
    },
    "wall_clock_ms": {
      "type": "integer",
      "minimum": 0
    },
    "cpu_sec": {
      "type": "number",
      "minimum": 0
    },
    "gpu_sec": {
      "type": ["number", "null"],
      "minimum": 0
    },
    "energy_kwh": {
      "type": ["number", "null"],
      "minimum": 0
    },
    "node_ens_name": {
      "type": ["string", "null"],
      "minLength": 1
    },
    "attestor_address": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{40}$"
    },
    "attestor_sig": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{130}$"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  }
}
